<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title %></title>
    <style>
        .container {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }
        .left-column,
        .right-column {
            width: 15%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            margin-bottom: 10%;
            margin-top: 15%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="left-column">
            <% if (plants != '') { %>
                <% plants.slice(0, 2).forEach(function(plants, index) { %>
                    <img src="/images/<%- plants.image %>" alt="<%- plants.name %>" class="image" loading="lazy">
                <% }) %>
            <% } %>
        </div>
        <div class="right-column">
            <% if (plants != '') { %>
                <% plants.slice(2, 4).forEach(function(plants, index) { %>
                    <img src="/images/<%- plants.image %>" alt="<%- plants.name %>" class="image" loading="lazy">
                <% }) %>
            <% } %>
        </div>
    </div>
</body>
</html>
